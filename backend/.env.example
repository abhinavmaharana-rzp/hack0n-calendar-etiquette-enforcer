# ============================================
# Calendar Etiquette Enforcer - Environment Variables
# ============================================
# Copy this file to .env and fill in your actual values
# NEVER commit the .env file to git

# Server Configuration
PORT=5000
NODE_ENV=development

# MongoDB Configuration (Required)
MONGO_URI=mongodb://localhost:27017/calendar-enforcer
# For MongoDB Atlas use:
# MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/calendar-enforcer?retryWrites=true&w=majority

# Google Service Account Configuration (Required)
# Path to your service account JSON file
GOOGLE_SERVICE_ACCOUNT_JSON=./backend/.google-service-account.json
# Admin email for domain-wide delegation
GOOGLE_ADMIN_EMAIL=admin@razorpay.com
# Optional: Specific calendar to monitor (default: primary)
GOOGLE_CALENDAR_ID=primary

# Slack Bot Configuration (Required for Socket Mode)
# Get these from https://api.slack.com/apps
SLACK_BOT_TOKEN=xoxb-your-bot-token-here
SLACK_SIGNING_SECRET=your-signing-secret-here
SLACK_APP_TOKEN=xapp-your-app-level-token-here

# Polling Configuration
# How often to check for new calendar events (in seconds)
POLL_INTERVAL_SECONDS=30
# How far back to look for events (in minutes)
POLL_LOOKBACK_MINUTES=1

# Agenda Detection Rules
# Minimum characters to consider an event has an agenda
MIN_AGENDA_LENGTH=20

# Frontend Configuration
FRONTEND_URL=http://localhost:3000

# Logging
LOG_LEVEL=info